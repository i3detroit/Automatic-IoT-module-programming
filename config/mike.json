    {
        "name": "Mud Room %id% Switch",
        "hass_template": "3-way-tuya-light-switch",
        "hass_domain": "light",
        "software": "tasmota",
        "site": "mike",
        "module": "WEMOS",
        "board": "esp01_1m",
        "base_topic": "mud-room",
        "topic": "%id%-lightswitch",
        "group_topic": null,
        "ip_addr": "192.168.1.4",
        "poweron_state": 3,
        "build_flags": [
            "KEY_ONLY_SINGLE_PRESS 1"
        ],
        "instances":[
            {
                "id": "East",
                "ip_addr": "192.168.1.4"
            },
            {
                "id": "West",
                "ip_addr": "192.168.1.55"
            }
        ],
        "commands": [
            {
                "command": "backlog",
                "payload": "GPIO04 21; GPIO05 158; GPIO12 22; GPIO13 18; GPIO14 9; switchtopic 0; switchmode1 2; switchmode2 5",
                "restart": 1
            },
            {
                "command": "rule1",
                "payload": "ON event#ON DO power2 TOGGLE ENDON"
            },
            {
                "command": "rule2",
                "payload": "ON event#OFF DO power2 TOGGLE ENDON"
            },
            {
                "command": "rule3",
                "concat": [
                    "ON power1#state=1 DO backlog rule1 0; rule2 1 ENDON",
                    "ON power1#state=0 DO backlog rule1 1; rule2 0 ENDON",
                    "ON Mqtt#Connected DO subscribe hass,tele/sirius/hass/LWT ENDON",
                    "ON Event#hass=Online DO power ENDON"
                ]
            },
            {
                "command": "backlog",
                "payload": "rule3 1; restart 1",
                "restart": 1
            }
        ]
    },
